    <!--ScrollViewer for a MenuItem-->
    <MenuScrollingVisibilityConverter x:Uid="MenuScrollingVisibilityConverter_1" x:Key="MenuScrollingVisibilityConverter" />
    <Geometry x:Uid="Geometry_1" x:Key="DownArrow">M 0,0 L 3.5,4 L 7,0 Z</Geometry>
    <Geometry x:Uid="Geometry_2" x:Key="UpArrow">M 0,4 L 3.5,0 L 7,4 Z</Geometry>
    <Geometry x:Uid="Geometry_3" x:Key="RightArrow">M 0,0 L 4,3.5 L 0,7 Z</Geometry>

    <Style x:Uid="Style_2" x:Key="MenuScrollButton" TargetType="{x:Type RepeatButton}" BasedOn="{x:Null}">
        <Setter x:Uid="Setter_5" Property="ClickMode" Value="Hover" />
        <Setter x:Uid="Setter_6" Property="MinWidth" Value="0" />
        <Setter x:Uid="Setter_7" Property="MinHeight" Value="0" />
        <Setter x:Uid="Setter_8" Property="Template">
            <Setter.Value>
                <ControlTemplate x:Uid="ControlTemplate_2" TargetType="{x:Type RepeatButton}">
                    <DockPanel x:Uid="DockPanel_1" Background="Transparent" SnapsToDevicePixels="true">
                        <Rectangle x:Uid="R1" DockPanel.Dock="Right" x:Name="R1" Width="1" Fill="Transparent" />
                        <Rectangle x:Uid="B1" DockPanel.Dock="Bottom" x:Name="B1" Height="1" Fill="Transparent" />
                        <Rectangle x:Uid="L1" DockPanel.Dock="Left" x:Name="L1" Width="1" Fill="Transparent" />
                        <Rectangle x:Uid="T1" DockPanel.Dock="Top" x:Name="T1" Height="1" Fill="Transparent" />
                        <ContentPresenter x:Uid="ContentContainer" x:Name="ContentContainer" Margin="2,2,2,2" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <Trigger x:Uid="Trigger_1" Property="IsPressed" Value="true">
                            <Setter x:Uid="Setter_9" TargetName="R1" Property="Fill"
                                    Value="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" />
                            <Setter x:Uid="Setter_10" TargetName="B1" Property="Fill"
                                    Value="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" />
                            <Setter x:Uid="Setter_11" TargetName="L1" Property="Fill"
                                    Value="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" />
                            <Setter x:Uid="Setter_12" TargetName="T1" Property="Fill"
                                    Value="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" />
                            <Setter x:Uid="Setter_13" TargetName="ContentContainer" Property="Margin" Value="3,3,1,1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Uid="Style_3" x:Key="MenuScrollViewer" TargetType="{x:Type ScrollViewer}" BasedOn="{x:Null}">
        <Setter x:Uid="Setter_14" Property="HorizontalScrollBarVisibility" Value="Hidden" />
        <Setter x:Uid="Setter_15" Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter x:Uid="Setter_16" Property="Template">
            <Setter.Value>
                <ControlTemplate x:Uid="ControlTemplate_3" TargetType="{x:Type ScrollViewer}">
                    <Grid x:Uid="Grid_1" SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Uid="ColumnDefinition_1" Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition x:Uid="RowDefinition_1" Height="Auto" />
                            <RowDefinition x:Uid="RowDefinition_2" Height="*" />
                            <RowDefinition x:Uid="RowDefinition_3" Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border x:Uid="Border_2" Grid.Row="1" Grid.Column="0">
                            <ScrollContentPresenter x:Uid="ScrollContentPresenter_1" Margin="{TemplateBinding Padding}" />
                        </Border>
                        <RepeatButton x:Uid="RepeatButton_1" Style="{StaticResource MenuScrollButton}" Grid.Row="0" Grid.Column="0" 
                                      Command="{x:Static ScrollBar.LineUpCommand}" CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}" Focusable="False">
                            <RepeatButton.Visibility>
                                <MultiBinding x:Uid="MultiBinding_1" FallbackValue="Visibility.Collapsed" Converter="{StaticResource MenuScrollingVisibilityConverter}" ConverterParameter="0">
                                    <Binding x:Uid="Binding_1" RelativeSource="{RelativeSource TemplatedParent}" Path="ComputedVerticalScrollBarVisibility" />
                                    <Binding x:Uid="Binding_2" RelativeSource="{RelativeSource TemplatedParent}" Path="VerticalOffset" />
                                    <Binding x:Uid="Binding_3" RelativeSource="{RelativeSource TemplatedParent}" Path="ExtentHeight" />
                                    <Binding x:Uid="Binding_4" RelativeSource="{RelativeSource TemplatedParent}" Path="ViewportHeight" />
                                </MultiBinding>
                            </RepeatButton.Visibility>
                            <Path x:Uid="Path_1" Fill="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}" Data="{StaticResource UpArrow}" />
                        </RepeatButton>
                        <RepeatButton x:Uid="RepeatButton_2" Style="{StaticResource MenuScrollButton}" Grid.Row="2" Grid.Column="0" 
                                      Command="{x:Static ScrollBar.LineDownCommand}" CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}" Focusable="False">
                            <RepeatButton.Visibility>
                                <MultiBinding x:Uid="MultiBinding_2" FallbackValue="Visibility.Collapsed" Converter="{StaticResource MenuScrollingVisibilityConverter}" ConverterParameter="100">
                                    <Binding x:Uid="Binding_5" RelativeSource="{RelativeSource TemplatedParent}" Path="ComputedVerticalScrollBarVisibility" />
                                    <Binding x:Uid="Binding_6" RelativeSource="{RelativeSource TemplatedParent}" Path="VerticalOffset" />
                                    <Binding x:Uid="Binding_7" RelativeSource="{RelativeSource TemplatedParent}" Path="ExtentHeight" />
                                    <Binding x:Uid="Binding_8" RelativeSource="{RelativeSource TemplatedParent}" Path="ViewportHeight" />
                                </MultiBinding>
                            </RepeatButton.Visibility>
                            <Path x:Uid="Path_2" Fill="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}" Data="{StaticResource DownArrow}" />
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Uid="Style_4" x:Key="{x:Static MenuItem.SeparatorStyleKey}" TargetType="{x:Type Separator}">
        <Setter x:Uid="Setter_17" Property="Height" Value="2" />
        <Setter x:Uid="Setter_18" Property="Margin" Value="0,4,0,4" />
        <Setter x:Uid="Setter_19" Property="Template">
            <Setter.Value>
                <ControlTemplate x:Uid="ControlTemplate_4" TargetType="{x:Type Separator}">
                    <Border x:Uid="Border_3" BorderThickness="1">
                        <Border.BorderBrush>
                            <!--<SolidColorBrush Color="{DynamicResource BorderMediumColor}" />-->
                            <LinearGradientBrush x:Uid="LinearGradientBrush_2" StartPoint="0,0" EndPoint="0,1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStopCollection x:Uid="GradientStopCollection_1">
                                        <GradientStop x:Uid="GradientStop_3" Color="{DynamicResource HighlightBackColor}" Offset="0.0" />
                                        <GradientStop x:Uid="GradientStop_4" Color="{DynamicResource DarkBlueColor}" Offset="1.0" />
                                    </GradientStopCollection>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

