                            <StackPanel x:Uid="StackPanel_2" IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                        </ScrollViewer>
                    </Border>
                </Popup>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger x:Uid="Trigger_2" Property="IsSuspendingPopupAnimation" Value="true">
                <Setter x:Uid="Setter_20" TargetName="Popup" Property="PopupAnimation" Value="None" />
            </Trigger>
            <Trigger x:Uid="Trigger_3" Property="IsHighlighted" Value="true">
                <Setter x:Uid="Setter_21" TargetName="Border" Property="BorderBrush" Value="Transparent" />
                <Setter x:Uid="Setter_22" Property="Foreground" Value="{StaticResource ForegroundBrush}" />
                <Setter x:Uid="Setter_23" Property="Background" TargetName="Border" Value="{StaticResource HighlightBack}"/>
